<div class="steps sk5-text-sm@md" aria-label="Multi-step indicator">
    <ol class="steps__list">
        <li class="step step--completed">
            <a class="step__label" href="#0">Cart <span class="sr-only">- step completed</span></a>

            <span class="step__separator" aria-hidden="true">
                <svg class="sk5-icon" viewBox="0 0 16 16"><polyline fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" points="6.5,3.5 11,8 6.5,12.5 "></polyline></svg>
            </span>

            <div class="step__circle" aria-hidden="true">
                <svg class="sk5-icon" viewBox="0 0 16 16"><polyline fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" points="1,9 5,13 15,3 "></polyline></svg>
            </div>
        </li>

        <li class="step step--current">
            <a class="step__label">Delivery <span class="sr-only">- current step</span></a>

            <span class="step__separator" aria-hidden="true">
                <svg class="sk5-icon" viewBox="0 0 16 16"><polyline fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" points="6.5,3.5 11,8 6.5,12.5 "></polyline></svg>
            </span>

            <div class="step__circle" aria-hidden="true">2</div>
        </li>

        <li class="step">
            <a class="step__label">Billing</a>

            <span class="step__separator" aria-hidden="true">
                <svg class="sk5-icon" viewBox="0 0 16 16"><polyline fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" points="6.5,3.5 11,8 6.5,12.5 "></polyline></svg>
            </span>

            <div class="step__circle" aria-hidden="true">3</div>
        </li>

        <li class="step">
            <a class="step__label">Review</a>

            <div class="step__circle" aria-hidden="true">4</div>
        </li>
    </ol>
</div>

<style>

/* variables */
:root {
  /* colors */
  --sk5-color-primary-hsl: 250, 84%, 54%;
  --sk5-color-bg-hsl: 0, 0%, 100%;
  --sk5-color-contrast-high-hsl: 230, 7%, 23%;
  --sk5-color-contrast-higher-hsl: 230, 13%, 9%;
  --sk5-color-contrast-lower-hsl: 240, 4%, 85%;
  --sk5-color-bg-dark-hsl: 240, 4%, 95%;
  --sk5-color-white-hsl: 0, 0%, 100%;

  /* spacing */
  --sk5-space-2xs: 0.375rem;
  --sk5-space-xs: 0.5rem;
  --sk5-space-md: 1.25rem;

  /* typography */
  --sk5-text-sm: 0.833rem;
}

@media(min-width: 64rem){
  :root {
    /* spacing */
    --sk5-space-2xs: 0.5625rem;
    --sk5-space-xs: 0.75rem;
    --sk5-space-md: 2rem;

    /* typography */
    --sk5-text-sm: 1rem;
  }
}

/* icons */
.sk5-icon {
  height: var(--sk5-size, 1em);
  width: var(--sk5-size, 1em);
  display: inline-block;
  color: inherit;
  fill: currentColor;
  line-height: 1;
  flex-shrink: 0;
  max-width: initial;
}

/* component */
:root {
  --steps-number: 4;
  --step-separator-line-stroke: 3px;
  --step-separator-line-gap: 3px;
  --step-circle-size: 32px;
  --step-circle-font-size: 16px;
}

.steps {
    padding: calc(var(--step-circle-size)/2) 0 0;
}

.steps__list {
    @apply grid grid-cols-4;
}

.step {
    @apply relative inline-flex items-center justify-center text-center;
    padding: 0 var(--sk5-space-xs);
}

.step__label {
    @apply inline-block no-underline;
    margin-top: calc(var(--sk5-space-2xs) + var(--step-circle-size)/2);
    color: inherit;
}

.step--completed .step__label,
.step--current .step__label {
  color: hsl(var(--sk5-color-primary-hsl));
}

.step--completed .step__circle,
.step--current .step__circle {
    background-color: hsl(var(--sk5-color-primary-hsl));
    color: hsl(var(--sk5-color-white-hsl));
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.step--completed .step__label {
    @apply underline;
}

.step--completed .step__separator {
    background-color: hsl(var(--sk5-color-primary-hsl));
}

.step__separator {
    @apply absolute overflow-hidden inline-block align-middle text-transparent whitespace-nowrap;

    top: calc(var(--step-separator-line-stroke) * -1/2);
    left: calc(50% + var(--step-circle-size)/2 + var(--step-separator-line-gap));
    height: var(--step-separator-line-stroke);
    width: calc(100% - var(--step-circle-size) - var(--step-separator-line-gap)*2);
    background-color: hsl(var(--sk5-color-contrast-lower-hsl));
}

.step__separator .sk5-icon {
  @apply block;
}

.step__circle {
    @apply absolute flex justify-center items-center text-base leading-8 w-8 h-8 rounded-full;
    left: calc(50% - var(--step-circle-size)/2);
    top: calc(var(--step-circle-size) * -1/2);
    background-color: hsl(var(--sk5-color-contrast-lower-hsl));
}

.step__circle .sk5-icon {
    @apply w-4 h-4;
}

</style>