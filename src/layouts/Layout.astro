---
import ComponentsList from '@components/ComponentsList.astro';
import { ViewTransitions } from "astro:transitions";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
        <ViewTransitions />
	</head>
	<body class="font-sans bg-slate-50 text-slate-600">
        <div class="flex min-h-dvh">
            <div class="w-80 p-8 bg-slate-900 text-slate-100">
                <div class="mb-8 text-2xl font-bold">
                    <a href="/">Composants</a>
                </div>
                <ComponentsList />
            </div>
            <main class="w-full max-w-5xl p-8">
                <h1 class="mb-8 text-2xl font-bold">{title}</h1>
                <slot />
            </main>
        </div>
	</body>
</html>
